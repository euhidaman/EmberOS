<!DOCTYPE html>
<html>
<head>
    <title>EmberOS Installer</title>
    <HTA:APPLICATION
        ID="EmberOSInstaller"
        APPLICATIONNAME="EmberOS Installer"
        BORDER="dialog"
        BORDERSTYLE="raised"
        CAPTION="yes"
        MAXIMIZEBUTTON="no"
        MINIMIZEBUTTON="no"
        SHOWINTASKBAR="yes"
        SINGLEINSTANCE="yes"
        SYSMENU="yes"
        WINDOWSTATE="normal"
        SCROLL="no"
    />
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: linear-gradient(135deg, #1a1a24 0%, #2a2a3a 100%);
            color: #f0f0fa;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
        }

        .header {
            background: linear-gradient(135deg, #ff6b35 0%, #ff8c5a 100%);
            padding: 30px;
            text-align: center;
            border-radius: 10px 10px 0 0;
        }

        .header h1 {
            margin: 0;
            color: white;
            font-size: 32px;
        }

        .header p {
            margin: 5px 0 0 0;
            color: rgba(255,255,255,0.9);
        }

        .content {
            background: rgba(255,255,255,0.05);
            padding: 30px;
            min-height: 300px;
        }

        .page {
            display: none;
        }

        .page-active {
            display: block;
        }

        .welcome-text {
            line-height: 1.6;
        }

        .feature-list {
            list-style: none;
            padding: 0;
            margin: 20px 0;
        }

        .feature-list li {
            padding: 10px;
            margin: 5px 0;
            background: rgba(255,255,255,0.03);
            border-left: 3px solid #ff6b35;
        }

        .feature-list li:before {
            content: "‚úì ";
            color: #ff6b35;
            font-weight: bold;
            margin-right: 10px;
        }

        .checkbox-group {
            margin: 15px 0;
            padding: 15px;
            background: rgba(255,255,255,0.05);
            border-radius: 8px;
        }

        .checkbox-group h3 {
            margin-top: 0;
            color: #ff6b35;
        }

        .checkbox-group label {
            display: block;
            padding: 8px;
            cursor: pointer;
        }

        .checkbox-group input[type="checkbox"] {
            margin-right: 10px;
        }

        .progress-bar {
            width: 100%;
            height: 30px;
            background: rgba(255,255,255,0.1);
            border-radius: 15px;
            overflow: hidden;
            margin: 20px 0;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #ff6b35 0%, #ff8c5a 100%);
            width: 0%;
            transition: width 0.3s;
            text-align: center;
            line-height: 30px;
            color: white;
            font-weight: bold;
        }

        .log-area {
            background: rgba(0,0,0,0.3);
            border: 1px solid rgba(255,107,53,0.3);
            border-radius: 8px;
            padding: 15px;
            height: 200px;
            overflow-y: auto;
            font-family: 'Consolas', monospace;
            font-size: 12px;
            margin-top: 15px;
        }

        .log-entry {
            padding: 2px 0;
            color: #a0a0b0;
        }

        .footer {
            padding: 20px;
            text-align: right;
            background: rgba(0,0,0,0.2);
            border-radius: 0 0 10px 10px;
        }

        .btn {
            padding: 12px 30px;
            margin-left: 10px;
            border: none;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
        }

        .btn-primary {
            background: linear-gradient(135deg, #ff6b35 0%, #ff8c5a 100%);
            color: white;
        }

        .btn-secondary {
            background: rgba(255,255,255,0.1);
            color: #f0f0fa;
        }

        .info-box {
            background: rgba(96,165,250,0.1);
            border: 1px solid rgba(96,165,250,0.3);
            border-radius: 8px;
            padding: 15px;
            margin: 15px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üî• EmberOS</h1>
            <p>AI-Native Desktop Assistant Installer v1.0.0</p>
        </div>

        <div class="content">
            <!-- Page 1: Welcome -->
            <div id="page1" class="page page-active">
                <h2>Welcome to EmberOS!</h2>
                <div class="welcome-text">
                    <p>EmberOS transforms your Windows desktop into an AI-native environment.</p>
                </div>
                <ul class="feature-list">
                    <li>Fully self-contained installation</li>
                    <li>Dual AI models for speed and accuracy</li>
                    <li>Complete document creation and reading</li>
                    <li>100% local and private</li>
                </ul>
                <div class="info-box">
                    <strong>‚ö†Ô∏è Important:</strong> EmberOS installs in isolated directories and won't affect existing software.
                </div>
            </div>

            <!-- Page 2: Options -->
            <div id="page2" class="page">
                <h2>Installation Options</h2>
                <div class="checkbox-group">
                    <h3>AI Models</h3>
                    <label>
                        <input type="checkbox" id="chkVisionModel" checked>
                        Qwen2.5-VL Vision Model (~5 GB)
                    </label>
                    <label>
                        <input type="checkbox" id="chkBitNetModel" checked>
                        BitNet Text Model (~1.2 GB)
                    </label>
                </div>
                <div class="checkbox-group">
                    <h3>Options</h3>
                    <label>
                        <input type="checkbox" id="chkShortcut" checked>
                        Create Start Menu shortcut
                    </label>
                    <label>
                        <input type="checkbox" id="chkPath" checked>
                        Add EmberOS to PATH
                    </label>
                </div>
            </div>

            <!-- Page 3: Installing -->
            <div id="page3" class="page">
                <h2>Installing EmberOS...</h2>
                <div class="progress-bar">
                    <div id="progressFill" class="progress-fill">0%</div>
                </div>
                <p id="statusText" style="text-align: center;">Preparing installation...</p>
                <div class="log-area" id="logArea"></div>
            </div>

            <!-- Page 4: Complete -->
            <div id="page4" class="page">
                <h2 style="color: #4ade80;">‚úì Installation Complete!</h2>
                <div class="info-box">
                    <h3>Next Steps:</h3>
                    <ol>
                        <li>Open a new Command Prompt</li>
                        <li>Run: <code>ember-llm</code></li>
                        <li>Run: <code>emberd</code></li>
                        <li>Run: <code>ember-ui</code></li>
                    </ol>
                    <p>Or use <strong>Start Menu ‚Üí EmberOS</strong></p>
                </div>
                <div class="checkbox-group">
                    <label>
                        <input type="checkbox" id="chkLaunch" checked>
                        Launch EmberOS now
                    </label>
                </div>
            </div>
        </div>

        <div class="footer">
            <button id="btnBack" class="btn btn-secondary" onclick="goBack()" style="display:none;">‚Üê Back</button>
            <button id="btnNext" class="btn btn-primary" onclick="goNext()">Next ‚Üí</button>
        </div>
    </div>

    <script type="text/javascript">
        var currentPage = 1;
        var totalPages = 4;
        var installing = false;

        function showPage(pageNum) {
            // Hide all pages - using simple string manipulation to avoid classList issues
            for (var i = 1; i <= totalPages; i++) {
                var page = document.getElementById('page' + i);
                if (page) {
                    var cn = page.className;
                    page.className = cn.replace('page-active', '').replace(/\s+/g, ' ').trim() + ' page';
                }
            }

            // Show current page
            var currentPageEl = document.getElementById('page' + pageNum);
            if (currentPageEl) {
                currentPageEl.className = 'page page-active';
            }

            // Update buttons
            var btnBack = document.getElementById('btnBack');
            var btnNext = document.getElementById('btnNext');

            if (!btnBack || !btnNext) return;

            if (pageNum == 1) {
                btnBack.style.display = 'none';
                btnNext.innerHTML = 'Next ‚Üí';
            } else if (pageNum == 2) {
                btnBack.style.display = 'inline-block';
                btnNext.innerHTML = 'Install';
            } else if (pageNum == 3) {
                btnBack.style.display = 'none';
                btnNext.style.display = 'none';
            } else if (pageNum == 4) {
                btnBack.style.display = 'none';
                btnNext.innerHTML = 'Finish';
                btnNext.style.display = 'inline-block';
            }
        }

        function goNext() {
            if (currentPage == 2) {
                startInstallation();
            } else if (currentPage == 4) {
                if (document.getElementById('chkLaunch').checked) {
                    launchEmberOS();
                }
                window.close();
            } else {
                currentPage = currentPage + 1;
                showPage(currentPage);
            }
        }

        function goBack() {
            if (currentPage > 1 && !installing) {
                currentPage = currentPage - 1;
                showPage(currentPage);
            }
        }

        function addLog(message) {
            var logArea = document.getElementById('logArea');
            var entry = document.createElement('div');
            entry.className = 'log-entry';
            entry.innerText = message;
            logArea.appendChild(entry);
            logArea.scrollTop = logArea.scrollHeight;
        }

        function updateProgress(percent, status) {
            var progressFill = document.getElementById('progressFill');
            var statusText = document.getElementById('statusText');
            progressFill.style.width = percent + '%';
            progressFill.innerText = percent + '%';
            statusText.innerText = status;
        }

        function startInstallation() {
            currentPage = 3;
            showPage(3);
            installing = true;

            try {
                var shell = new ActiveXObject("WScript.Shell");
                var fso = new ActiveXObject("Scripting.FileSystemObject");

                var scriptPath = location.pathname.substr(1).replace(/\//g, '\\');
                var scriptDir = fso.GetParentFolderName(scriptPath);
                var installerBat = scriptDir + "\\EmberOS-Install.bat";

                addLog('Starting installation...');
                addLog('Location: ' + scriptDir);

                if (!fso.FileExists(installerBat)) {
                    addLog('ERROR: EmberOS-Install.bat not found!');
                    updateProgress(0, 'Installation failed');
                    return;
                }

                updateProgress(10, 'Preparing...');
                addLog('Found installer script');
                addLog('Launching batch installer...');

                // Run the batch installer
                var exec = shell.Exec('cmd.exe /c "' + installerBat + '"');

                // Monitor progress
                var progress = 20;
                var intervalId = setInterval(function() {
                    if (progress < 90) {
                        progress = progress + 5;
                        updateProgress(progress, 'Installing components...');
                    }

                    if (exec.Status == 1) {
                        clearInterval(intervalId);

                        if (exec.ExitCode == 0) {
                            updateProgress(100, 'Complete!');
                            addLog('Installation successful!');
                            currentPage = 4;
                            setTimeout(function() { showPage(4); }, 1000);
                        } else {
                            updateProgress(progress, 'Installation failed');
                            addLog('Error: Exit code ' + exec.ExitCode);
                        }
                        installing = false;
                    }
                }, 1000);

            } catch (e) {
                addLog('Error: ' + e.message);
                updateProgress(0, 'Installation failed');
                installing = false;
            }
        }

        function launchEmberOS() {
            try {
                var shell = new ActiveXObject("WScript.Shell");
                var emberDir = shell.ExpandEnvironmentStrings("%LOCALAPPDATA%") + "\\EmberOS";
                shell.Run('"' + emberDir + '\\ember-ui.cmd"', 1, false);
            } catch (e) {
                // Ignore
            }
        }

        // Initialize
        showPage(1);
    </script>
</body>
</html>

